@model AuktionMVC.Models.MinaSidorViewModel
@{
    int activeAuctions = Model.ActiveAuctions;
    int activeBids = Model.ActiveBids;
    int buysCount = Model.BuysCount;
    int salesCount = Model.SalesCount;
}

<div class="container mt-4">
    <!-- Page Title -->
    <div class="row mb-4">
        <div class="col">
            <h2>Mina Sidor</h2>
            <p class="text-muted">Hantera dina auktioner, bud och inställningar</p>
        </div>
    </div>

    <!-- Navigation Cards -->
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <!--Mina notiser-->
        <div class="col">
            <a href="/MinaSidor/Notiser" class="text-decoration-none">
                <div class="card h-100 hover-shadow">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-danger bg-opacity-10 p-3 rounded-circle me-3 position-relative">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                    class="bi bi-envelope text-danger" viewBox="0 0 16 16">
                                    <path
                                        d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V4Zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1H2Zm13 2.383-4.708 2.825L15 11.105V5.383Zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741ZM1 11.105l4.708-2.897L1 5.383v5.722Z" />
                                </svg>
                                <!-- Notifikationsindikator för olästa meddelanden -->
                                <span
                                    class="position-absolute top-0 end-0 translate-middle badge rounded-pill bg-danger">
                                    3
                                    <span class="visually-hidden">olästa meddelanden</span>
                                </span>
                            </div>
                            <h4 class="card-title mb-0 text-body">Notiser</h4>
                        </div>
                        <p class="card-text text-muted">Dina konversationer och notifikationer</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Mina Köp -->
        <div class="col">
            <a href="/MinaSidor/Finished" class="text-decoration-none">
                <div class="card h-100 hover-shadow">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-success bg-opacity-10 p-3 rounded-circle me-3">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                    class="bi bi-trophy text-success" viewBox="0 0 16 16">
                                    <path
                                        d="M2.5.5A.5.5 0 0 1 3 0h10a.5.5 0 0 1 .5.5c0 .538-.012 1.05-.034 1.536a3 3 0 1 1-1.133 5.89c-.79 1.865-1.878 2.777-2.833 3.011v2.173l1.425.356c.194.048.377.135.537.255L13.3 15.1a.5.5 0 0 1-.3.9H3a.5.5 0 0 1-.3-.9l1.838-1.379c.16-.12.343-.207.537-.255L6.5 13.11v-2.173c-.955-.234-2.043-1.146-2.833-3.012a3 3 0 1 1-1.132-5.89A33.076 33.076 0 0 1 2.5.5zm.099 2.54a2 2 0 0 0 .72 3.935c-.333-1.05-.588-2.346-.72-3.935zm10.083 3.935a2 2 0 0 0 .72-3.935c-.133 1.59-.388 2.885-.72 3.935z" />
                                </svg>
                            </div>
                            <h4 class="card-title mb-0 text-body">Köpt & Sålt</h4>
                        </div>
                        <p class="card-text text-muted">Dina vunna auktioner och köphistorik, och det du sålt till
                            andra.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Mina Auktioner -->
        <div class="col">
            <a href="/MinaSidor/Auktioner" class="text-decoration-none">
                <div class="card h-100 hover-shadow">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-warning bg-opacity-10 p-3 rounded-circle me-3">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                    class="bi bi-box-seam text-warning" viewBox="0 0 16 16">
                                    <path
                                        d="M8.186 1.113a.5.5 0 0 0-.372 0L1.846 3.5l2.404.961L10.404 2l-2.218-.887zm3.564 1.426L5.596 5 8 5.961 14.154 3.5l-2.404-.961zm3.25 1.7-6.5 2.6v7.922l6.5-2.6V4.24zM7.5 14.762V6.838L1 4.239v7.923l6.5 2.6zM7.443.184a1.5 1.5 0 0 1 1.114 0l7.129 2.852A.5.5 0 0 1 16 3.5v8.662a1 1 0 0 1-.629.928l-7.185 2.874a.5.5 0 0 1-.372 0L.63 13.09a1 1 0 0 1-.63-.928V3.5a.5.5 0 0 1 .314-.464L7.443.184z" />
                                </svg>
                            </div>
                            <h4 class="card-title mb-0 text-body">Mina Auktioner</h4>
                        </div>
                        <p class="card-text text-muted">Dina aktiva och avslutade auktioner</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Mina Bud -->
        <div class="col">
            <a href="/MinaSidor/Bud" class="text-decoration-none">
                <div class="card h-100 hover-shadow">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-info bg-opacity-10 p-3 rounded-circle me-3">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                    class="bi bi-currency-exchange text-info" viewBox="0 0 16 16">
                                    <path
                                        d="M0 5a5.002 5.002 0 0 0 4.027 4.905 6.46 6.46 0 0 1 .544-2.073C3.695 7.536 3.132 6.864 3 5.91h-.5v-.426h.466V5.05c0-.046 0-.093.004-.135H2.5v-.427h.511C3.236 3.24 4.213 2.5 5.681 2.5c.316 0 .59.031.819.085v.733a3.46 3.46 0 0 0-.815-.082c-.919 0-1.538.466-1.734 1.252h1.917v.427h-1.98c-.003.046-.003.097-.003.147v.422h1.983v.427H3.93c.118.602.468 1.03 1.005 1.229a6.5 6.5 0 0 1 4.97-3.113A5.002 5.002 0 0 0 0 5zm16 5.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0zm-7.75 1.322c.069.835.746 1.485 1.964 1.562V14h.54v-.62c1.259-.086 1.996-.74 1.996-1.69 0-.865-.563-1.31-1.57-1.54l-.426-.1V8.374c.54.06.884.347.966.745h.948c-.07-.804-.779-1.433-1.914-1.502V7h-.54v.629c-1.076.103-1.808.732-1.808 1.622 0 .787.544 1.288 1.45 1.493l.358.085v1.78c-.554-.08-.92-.376-1.003-.787H8.25zm1.96-1.895c-.532-.12-.82-.364-.82-.732 0-.41.311-.719.824-.809v1.54h-.005zm.622 1.044c.645.145.943.38.943.796 0 .474-.37.8-1.02.86v-1.674l.077.018z" />
                                </svg>
                            </div>
                            <h4 class="card-title mb-0 text-body">Mina Bud</h4>
                        </div>
                        <p class="card-text text-muted">Följ dina aktiva och historiska bud</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Min Profil -->
        <div class="col">
            <a href="/MinaSidor/Profil" class="text-decoration-none">
                <div class="card h-100 hover-shadow">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-secondary bg-opacity-10 p-3 rounded-circle me-3">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                    class="bi bi-person text-secondary" viewBox="0 0 16 16">
                                    <path
                                        d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                                </svg>
                            </div>
                            <h4 class="card-title mb-0 text-body">Min Profil</h4>
                        </div>
                        <p class="card-text text-muted">Hantera din profil och inställningar</p>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row mt-4">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5>Snabbfakta</h5>
                    <div class="row text-center g-3">
                        <div class="col-md-3">
                            <div class="border-end">
                                <h6 class="text-muted">Aktiva bud</h6>
                                <h3>@activeBids</h3>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="border-end">
                                <h6 class="text-muted">Aktiva auktioner</h6>
                                <h3>@activeAuctions</h3>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="border-end">
                                <h6 class="text-muted">Vunna auktioner</h6>
                                <h3>@buysCount</h3>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <h6 class="text-muted">Sålda objekt</h6>
                            <h3>@salesCount</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-shadow:hover {
        box-shadow: 0 .5rem 1rem rgba(0, 0, 0, .15);
        transform: translateY(-3px);
        transition: all .2s ease-in-out;
    }
</style>