            <div class="card-body pb-0">  <!-- Remove padding bottom -->
                <div class="row">
                    <div class="col-6 border-end">  <!-- Add right border -->
                        <h3 class="card-title">@Model.Statistics.TotalPurchases</h3>
                        <div class="text-muted mb-3">Köpta</div>
                    </div>
                    <div class="col-6">
                        <h3 class="card-title">@Model.Statistics.TotalSales</h3>
                        <div class="text-muted mb-3">Sålda</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-center h-100">
            <div class="card-body">
                <h3 class="card-title">@Model.Statistics.ActiveAuctions</h3>
                <div class="text-muted">Active Auctions</div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card text-center h-100">
            <div class="card-body">
                <h3 class="card-title">@Model.UserSummary.Rating</h3>
                <div class="text-muted">Rating</div>
            </div>
        </div>
    </div>
</div>

    <!-- Tabs -->
    <ul class="nav nav-tabs mb-4" id="profileTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="active-tab" data-bs-toggle="tab" data-bs-target="#active" type="button" role="tab">
                Activa Auktioner
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="completed-tab" data-bs-toggle="tab" data-bs-target="#completed" type="button" role="tab">
                Försäljningar
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="reviews-tab" data-bs-toggle="tab" data-bs-target="#reviews" type="button" role="tab">
                Reviews
            </button>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content" id="profileTabsContent">
        <!-- Active Auctions Tab -->
        <div class="tab-pane fade show active" id="active" role="tabpanel">
            <h2>Auktioner (@Model.ActiveAuctions.Count)</h2>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var auction in Model.ActiveAuctions)
                {
                    <div class="col">
                        <partial name="_AuctionSearchResult" model="auction" />
                    </div>
                }
                @if (!Model.ActiveAuctions.Any())
                {
                    <div class="col-12 text-center text-muted">
                        <p>Inga aktiva auktioner just nu.</p>
                    </div>
                }
            </div>
        </div>

        <div class="tab-pane fade " id="completed" role="tabpanel">
            <h2>Tidigare Försäljningar (@Model.CompletedSales.Count)</h2>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var sale in Model.CompletedSales)
                {
                    <div class="col">
                        <div class="card h-100">
                            <img src="@sale.ImageUrl" class="card-img-top" alt="@sale.Title">
                            <div class="card-body">
                                <h5 class="card-title">@sale.Title</h5>
                                <p class="card-text">@sale.Description</p>
                                <p class="card-text">
                                    <strong>Slutpris:</strong> @sale.FinalPrice.ToString("C")
                                </p>
                                <p class="card-text">
                                    <small class="text-muted">
                                        Såld: @sale.SaleDate.WordDateString()<br/>
                                        Köpare: @sale.BuyerName
                                    </small>
                                </p>
                            </div>
                        </div>
                    </div>
                }
                @if (!Model.CompletedSales.Any())
                {
                    <div class="col-12 text-center text-muted">
                        <p>Inga avslutade försäljningar än.</p>
                    </div>
                }
            </div>
        </div>

        <!-- Reviews Tab -->
        <div class="tab-pane fade" id="reviews" role="tabpanel">
            <!-- Review Card -->
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex mb-3">
